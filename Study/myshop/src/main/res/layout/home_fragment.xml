<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="#ff6000">

        <TextView
            android:id="@+id/scan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@mipmap/sao"
            android:text="扫一扫"
            android:textColor="#f0f0f0"
            android:textSize="10sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            >
            <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginTop="12dp"
                android:drawableLeft="@mipmap/find_home"
                android:drawableRight="@mipmap/camera_home"
                android:focusable="false"
                android:hint="  搜索"
                android:cursorVisible="false"/>
            <View
                android:layout_width="180dp"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="#fff"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@mipmap/region"
            android:text="   地区"
            android:textColor="#fff"
            android:textSize="10sp"
            android:layout_marginTop="3.5dp"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@mipmap/vip_code"
            android:text="会员码"
            android:textColor="#fff"
            android:textSize="10sp"
            android:layout_marginTop="3.5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/homeViewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v4.view.ViewPager>
    </LinearLayout>
</LinearLayout>
