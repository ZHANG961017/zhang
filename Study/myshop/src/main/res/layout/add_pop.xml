<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0">

    <View
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"/>
    <View
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"/>
    <View
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"/>
    <ImageView
        android:id="@+id/iv_pop"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="120dp"
        android:layout_height="120dp" />
    <LinearLayout
        android:id="@+id/layout"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/iv_pop"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/iv_name"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/money"
            android:textSize="20dp"
            android:textColor="#ff9800"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/money"/>
        <TextView
            android:id="@+id/inventory"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="库存:"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_above="@+id/put_in_shopCap"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买数量"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/subtract"
                android:src="@mipmap/subtract"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#dbdbdb"/>
            <TextView
                android:id="@+id/count"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:id="@+id/plus"
                android:src="@mipmap/plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:background="#dbdbdb"/>
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/put_in_shopCap"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确  定"
        android:textSize="25sp"
        android:background="@drawable/shape_color"/>
</RelativeLayout>
