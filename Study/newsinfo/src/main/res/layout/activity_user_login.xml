<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/beijing01"
    tools:context="bwie.com.newsinfo.UserLoginActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp">

        <EditText
            android:id="@+id/edit_userName"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:hint="请输入账号"
            android:background="@drawable/border"/>
        <Button
            android:onClick="UserRegister"
            android:background="@drawable/border_null"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册账号"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/edit_userPwd"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:hint="请输入密码"
            android:background="@drawable/border"/>
        <Button
            android:onClick="FindPwd"
            android:background="@drawable/border_null"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找回密码"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/remember_pwd"
            android:layout_marginLeft="75.5dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:textSize="18sp"/>
        <CheckBox
            android:id="@+id/auto_login"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动登录"
            android:textSize="18sp"/>
    </LinearLayout>

    <Button
        android:onClick="UserLogin"
        android:layout_gravity="center_horizontal"
        android:layout_width="244dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:text="登陆"
        android:textSize="20sp"
        android:background="@drawable/border"/>

</LinearLayout>
