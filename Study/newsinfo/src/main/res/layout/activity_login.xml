<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="bwie.com.newsinfo.LoginActivity">

    <uk.co.senab.photoview.PhotoView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/user"/>
    <Button
        android:onClick="button_Login"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="65dp"
        android:layout_height="35dp"
        android:text="登陆"
        android:background="@drawable/round_style"
        android:textColor="#575757"
        android:textSize="20sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">

        <ImageView
            android:id="@+id/iv_qq_login"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/ww"/>
        <ImageView
            android:id="@+id/iv_wx_login"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/weixin"/>
        <ImageView
            android:id="@+id/iv_blog"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/xinlang"/>
    </RelativeLayout>
    <TextView
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更多登录方式,敬请期待"
        android:textSize="20sp"/>
</LinearLayout>
